@model List<busStopFromDriver>
@{
    ViewData["Title"] = "driverPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["loca"]</h1>
<div style="background-image: url('../../wwwroot/images/road.jpg');">
    <div class="container">

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h3 class="text-center">My route</h3>
                @{
                    foreach (var i in Model)
                    {
                        <button>
                            @Html.ActionLink(@i.stop, "current", "Driver", new { location = @i.stop })
                        </button>
                    }
                }
            </div>
        </div>
    </div>
</div>





